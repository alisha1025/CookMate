{{!-- recipes.handlebars --}}
    <div class="max-w-md w-full bg-white shadow-md rounded px-8 pt-6 pb-8 mt-4">
      <h2 class="text-lg font-bold mb-4">Explore Recipes</h2>
      <div class="border-t border-gray-300 py-2  grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {{#each recipes as |recipe|}}
          <div class="mb-3 border border-gray-400 p-4 rounded">
            <h3 class="text-xl font-bold text-gray-700 mb-2">{{recipe.recipeName}}</h3>
            <p class="text-gray-600 font-semibold">Posted By: <span><em>{{User.username}}</em></span></p>
            <p class="text-gray-600 font-semibold">Ingredients:</p>
            <p class="text-gray-600">{{recipe.ingredients}}</p>
            <p class="text-gray-600 font-semibold mt-2">Instructions:</p>
            <p class="text-gray-600">{{recipe.instructions}}</p>
          </div>
        {{/each}}
      </div>
    </div>
