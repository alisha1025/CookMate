<div class="container mx-auto px-4 py-8 flex items-center justify-center">
  <div class="max-w-md w-full bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
    <h2
      class="text-2xl font-bold text-green-600 mb-4 text-center"
    >{{userName}}'s Favorite Recipes</h2>
    <div class="border-t border-gray-300 py-2">
      {{#each favorites as |favorite|}}
        <div class="mb-3 border border-gray-400 p-4 rounded">
          <div class="flex justify-between">
            <h3
              class="text-xl font-bold text-gray-700 mb-0"
            >{{favorite.recipe.recipeName}}</h3>
          </div>
          <p class="text-gray-600 font-semibold">Posted By:
            <span><em>{{favorite.recipe.User.username}}</em></span></p>
          <p class="text-gray-600 font-semibold">Ingredients:</p>
          <p
            class="text-gray-600 break-words"
          >{{favorite.recipe.ingredients}}</p>
          <p class="text-gray-600 font-semibold mt-2">Instructions:</p>
          <p
            class="text-gray-600 break-words"
          >{{favorite.recipe.instructions}}</p>
        </div>
      {{else}}
        <p class="text-gray-600">You have no favorite recipes yet.</p>
      {{/each}}
    </div>
  </div>
</div>